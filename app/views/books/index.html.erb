<% flash.each do |message_type, message| %>
<p id = "notice"><%= message %></p>
<% end %>


<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book.id) %></td>
      <td><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
      <% end %>
    </tr>
  </tbody>
</table>


<h2>New book</h2>

<% if @book.errors.any? %>
  <div id="error_explanation">
    <div id="error_explanation h2"><%= @book.errors.count %> errors prohibited this book from being saved:</div>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
      </ul>
      <% end %>
  </div>


<!-- form_with部分 -->
<%= form_with model: Book.new do |f| %>

<div class = "field">
<label>Title</label>
<%= f.text_field :title %>
</div>

<div class = "field">
<label>Body</label>
<%= f.text_area :body %>
</div>

<div><%= f.submit 'Create Book' %></div>
<% end %>

